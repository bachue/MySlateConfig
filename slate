# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2 1
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2 1
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2 1
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2 1
bind f1:cmd          move       screenOriginX;screenOriginY screenSizeX;screenSizeY 1

bind right:shift;cmd  push right bar-resize:screenSizeX/2 0
bind left:shift;cmd   push left  bar-resize:screenSizeX/2 0
bind up:shift;cmd     push up    bar-resize:screenSizeY/2 0
bind down:shift;cmd   push down  bar-resize:screenSizeY/2 0
bind f2:cmd           move       screenOriginX;screenOriginY screenSizeX;screenSizeY 0

# Focus Bindings
bind right:cmd    focus right
bind left:cmd     focus left
bind up:cmd       focus up
bind down:cmd     focus down
bind up:cmd;alt   focus behind
bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint
